{% extends 'base.html.twig' %}

{% block title %}Inscription - EventShop{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                
                <div class="card-header bg-dark text-white text-center py-4">
                    <h2 class="h4 fw-bold mb-1">Créer un compte</h2>
                    <p class="small text-white-50 mb-0">Rejoignez la communauté EventShop</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    
                    {{ form_errors(registrationForm) }}

                    {{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}
                        
                        <div class="mb-4">
                            {{ form_label(registrationForm.nom, 'Nom complet', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(registrationForm.nom, {
                                'attr': {
                                    'class': 'form-control form-control-lg', 
                                    'placeholder': 'Votre nom'
                                }
                            }) }}
                            <div class="text-danger small mt-1">
                                {{ form_errors(registrationForm.nom) }}
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(registrationForm.adresse, 'Adresse', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(registrationForm.adresse, {
                                'attr': {
                                    'class': 'form-control form-control-lg', 
                                    'placeholder': 'Votre adresse'
                                }
                            }) }}
                            <div class="text-danger small mt-1">
                                {{ form_errors(registrationForm.adresse) }}
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(registrationForm.email, 'Adresse Email', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(registrationForm.email, {
                                'attr': {
                                    'class': 'form-control form-control-lg', 
                                    'placeholder': 'nom@exemple.com'
                                }
                            }) }}
                            <div class="text-danger small mt-1">
                                {{ form_errors(registrationForm.email) }}
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(registrationForm.plainPassword, {
                                'attr': {
                                    'class': 'form-control form-control-lg', 
                                    'placeholder': 'Mot de passe'
                                }
                            }) }}
                            <div class="text-danger small mt-1">
                                {{ form_errors(registrationForm.plainPassword) }}
                            </div>
                        </div>

                        <div class="mb-4 form-check">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                            <label class="form-check-label small text-muted" for="{{ registrationForm.agreeTerms.vars.id }}">
                                J'accepte les conditions d'utilisation et la politique de confidentialité.
                            </label>
                            <div class="text-danger small">
                                {{ form_errors(registrationForm.agreeTerms) }}
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg fw-bold text-dark shadow-sm">
                                S'inscrire maintenant
                            </button>
                        </div>

                    {{ form_end(registrationForm) }}
                </div>

                <div class="card-footer text-center py-3 bg-light border-top-0">
                    <p class="mb-0 small text-muted">
                        Vous avez déjà un compte ? <br>
                        <a href="{{ path('app_login') }}" class="text-dark fw-bold text-decoration-none">
                            Se connecter ici
                        </a>
                    </p>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}