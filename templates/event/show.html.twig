{% extends 'base.html.twig' %}

{% block title %}{{ event.title }}{% endblock %}

{% block body %}

{% set gradient = 'linear-gradient(135deg, #0f172a 0%, #334155 100%)' %}
{% set icon = 'fa-music' %}
{% set titre = event.title|lower %}

{% if 'rire' in titre or 'humour' in titre %}{% set gradient = 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)' %}{% set icon = 'fa-microphone-lines' %}
{% elseif 'théâtre' in titre %}{% set gradient = 'linear-gradient(135deg, #870000 0%, #190a05 100%)' %}{% set icon = 'fa-masks-theater' %}
{% elseif 'festival' in titre %}{% set gradient = 'linear-gradient(135deg, #f093fb 0%, #f5576c 100%)' %}{% set icon = 'fa-guitar' %}
{% elseif 'sport' in titre %}{% set gradient = 'linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)' %}{% set icon = 'fa-futbol' %}
{% endif %}

<div class="text-white py-5 mb-5" style="background: {{ gradient }};">
    <div class="container py-4">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-white bg-opacity-25 p-3 rounded-circle me-3">
                        <i class="fas {{ icon }} fa-2x"></i>
                    </div>
                    <span class="badge bg-warning text-dark fw-bold">Événement</span>
                </div>
                <h1 class="display-3 fw-bold mb-2">{{ event.title }}</h1>
                <p class="lead opacity-75"><i class="fas fa-map-marker-alt me-2"></i> {{ event.location }}</p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a href="{{ path('app_event_index') }}" class="btn btn-outline-light rounded-pill px-4">
                    <i class="fas fa-arrow-left me-2"></i> Retour
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row g-5">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 p-4">
                <h3 class="fw-bold mb-4">Description</h3>
                <p class="text-muted fs-5" style="line-height: 1.8;">{{ event.description|nl2br }}</p>
                
                <hr class="my-5">
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <h6 class="fw-bold">Début</h6>
                        <p class="text-primary fs-5">{{ event.dateStart ? event.dateStart|date('d/m/Y à H:i') : '-' }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <h6 class="fw-bold">Fin</h6>
                        <p class="text-muted fs-5">{{ event.dateEnd ? event.dateEnd|date('d/m/Y à H:i') : '-' }}</p>
                    </div>
                </div>

                {% if is_granted('ROLE_ADMIN') %}
                    <div class="alert alert-secondary mt-4 d-flex justify-content-between align-items-center">
                        <span class="fw-bold"><i class="fas fa-shield-alt me-2"></i>Admin</span>
                        <div>
                            <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-sm btn-dark">Modifier</a>
                            <a href="{{ path('app_admin_export_guests', {'id': event.id}) }}" class="btn btn-sm btn-success">Export CSV</a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-lg rounded-4 sticky-top p-4 text-center" style="top: 20px;">
                <h2 class="display-4 fw-bold text-dark mb-3">
                    {{ event.price ? event.price ~ ' MAD' : 'Gratuit' }}
                </h2>
                
                {% set placesRestantes = event.capacity - event.billets|length %}
                
                {% if placesRestantes > 0 %}
                    <a href="{{ path('app_panier_add', {'id': event.id}) }}" class="btn btn-warning btn-lg w-100 fw-bold py-3 shadow-sm mb-3">
                        Réserver ma place
                    </a>
                    <div class="text-success small fw-bold">
                        <i class="fas fa-check-circle me-1"></i> Encore {{ placesRestantes }} places dispos
                    </div>
                {% else %}
                    <button class="btn btn-secondary w-100 py-3" disabled>Complet</button>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}